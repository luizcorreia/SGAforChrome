{
  "name": "SGA",
  "version": "1.7",
  "manifest_version": 2,
  
  "description": "SGA Fix conserta vários bugs do SGA da PUC Minas e adiciona um menu integrado ao Chrome.",
  
  "options_page": "options/options.html#general",
  
  "icons": { "16": "icons/icon128.png",
           "48": "icons/icon128.png",
          "128": "icons/icon128.png" },
  
  "browser_action": {
    "default_icon": "icons/icon16.png"
  },
  
  "permissions": [ "tabs", "http://www.sistemas.pucminas.br/*", "https://www.sistemas.pucminas.br/*" ],

  "content_scripts": [
    {
	  "run_at": "document_end",
      "matches": ["http://www.sistemas.pucminas.br/*"],
      "css": ["inject/folhadeestiloSGA.css", "inject/menu_site.css", "inject/menu_lateral_01.css"],
	  "js": ["jquery-1.8.3.js", "jquery.bpopup-0.7.0.min.js", "inject.js" ],
	  "all_frames": true
    }],
  "background": {
		"page" : "background.html"
		
	}

	

}